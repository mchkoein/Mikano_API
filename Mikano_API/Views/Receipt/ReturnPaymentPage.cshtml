
@{
	Layout = "";

	KConfigRepository kConfigRpstry = new KConfigRepository();

	string mpgs_CheckoutJSURL = kConfigRpstry.GetByKey("mpgs_CheckoutJSURL", "payment - mpgs");
	string projectConfigKeys.apiUrl = projectConfigKeys.apiUrl
}
<html>

<head>
    <script id="paymentScript" src="@mpgs_CheckoutJSURL"
            data-error="errorCallback"
            data-cancel="cancelCallback"
            data-complete="@(projectConfigKeys.apiUrl)receipt/ConfirmPayment">
    </script>


    <script type="text/javascript">
        var iobmessage = null;
        function errorCallback(error) {
            //document.getElementById.removeClass('show');
            console.log(JSON.stringify(error));
            iobmessage = 499;
        }
        function cancelCallback() {
            //document.getElementById.removeClass('show');
            console.log('Payment cancelled');
            iobmessage = 499;
        }
        function InitPayment(config) {
            console.log(config);
            Checkout.configure(JSON.parse(config));
        }
    </script>
    <style>
    #loaderDiv {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1100 !important;
        background-color: white;
        opacity: .6;
    }
    .ajax-loader {
        position: absolute;
        left: 50%;
        top: 50%;
        width: 50px;
        height: 50px;
        margin-left: -25px;
        margin-top: -25px;
        display: block;
    }
    </style>
</head>
<body>
    <div id="loaderDiv">
        <img src="@(projectConfigKeys.apiUrl)Content/images/loader.gif" class="ajax-loader" />
    </div>
</body>
</html>